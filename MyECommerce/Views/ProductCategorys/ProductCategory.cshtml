@model MyECommerce.ViewModels.CategoryFormViewModel

@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    @foreach (var p in Model.Products)
    {
     <li>@Html.ActionLink(p.Name, "Details", "Products", new { id = p.Id }, null)</li>
    }
</ul>